<div id="leftcol">
  <h2>Your account details</h2>

  <% form_for(@user) do |f| %>
    <div id="row">
      <h3><%= f.label :email %></h3>
      <p>It's really important that you set this to a valid, working, and responsive email address.  This is never shown to anyone on the site, and it's how we will communicate with you about your account as what you are looking for. </p>
      
      <%= f.text_field :email %>
    </div>

    <%=submit_tag "Update your account", :class => "submit" %>
  <% end %>
</div>

<div id="rightcol">
  <h2>Change your password</h2>
  <% form_for(@user) do |f| %>
    <%= render :partial => "password_resets/form", :locals => {:f => f} %>
    <%= submit_tag "Change password", :class => "submit" %>
  <% end %>
</div>